<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteListActivity">

    <ListView
        android:id="@+id/listViewNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_listListViewMarginStart"
        android:layout_marginEnd="@dimen/size_listListViewMarginEnd"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/size_listListViewDividerHeight" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/size_FloatButtonMargin"
        android:tint="@android:color/black"
        app:backgroundTint="@color/colorMyAccent"
        app:srcCompat="@drawable/ic_add" />

</FrameLayout>
